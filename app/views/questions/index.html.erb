<h1>Questions and Answers</h1>
<p id="notice"><%= notice %></p>
 
<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th>User</th>
      <th>&nbsp;</th>
      <th>Actions</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
 
<% @questions.each do |q| %>
  <tr>
    <td><%= q.question %></td>
    <td><%= q.answer %></td>
		<td><%= q.users.first.email%></td>
    <td align="center"><%= link_to 'Show', q %></td>
    <td align="center"><%= link_to 'Edit', edit_question_path(q) %></td>
    <td align="center"><%= link_to 'Delete', q, method: :delete, data: {confirm: 'Are you sure?'}%></td>

  </tr>
<% end %>
</table>
 
<br />

<%= link_to "Create a new Question", new_question_path %> | <%= link_to "View Your Questions and Answers", view_user_qanda_path %>

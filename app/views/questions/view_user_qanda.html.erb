<h3>Questions and Answers for: <%=current_user.email%> </h3>
<p id="notice"><%= notice %></p>
 
<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th>Date Created</th>
      <th>Last Updated</th>
      <th>&nbsp;</th>
      <th>Actions</th>
      <th>&nbsp;</th>

    </tr>
  </thead>
 
<% @questions.each do |q| %>
  <tr>
    <td><%= q.question %></td>
    <td><%= q.answer %></td>
		<td><%= q.created_at.strftime('%m-%d-%Y')%></td>
		<td><%= q.updated_at.strftime('%m-%d-%Y')%></td>
    <td><%= link_to 'Show', q %></td>
    <td><%= link_to 'Edit', edit_question_path(q) %></td>
    <td><%= link_to 'Destroy', q, :confirm => 'Are you sure?',
                                     :method => :delete %></td>
  </tr>
<% end %>
</table>
 
<br />

<%= link_to "Create a new Question", new_question_path %> | <%=link_to "See All Questions and Answers", questions_path%>
